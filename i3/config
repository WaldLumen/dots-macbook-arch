# Apps
bindsym $mod+e exec emacs
bindsym Mod1+m exec ~/documents/code/scripts/dunst-lookup.sh
bindsym Mod1+d exec rofi -show search  
bindsym $mod+Shift+f exec firefox
bindsym $mod+Return exec kitty
